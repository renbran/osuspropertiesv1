<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_osus_invoice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="o" t-value="doc.with_context(lang=lang)"/>
                <t t-set="format_uk_date" t-value="lambda d: d.strftime('%d/%m/%Y') if d else ''"/>
                <t t-set="format_number" t-value="lambda v: '{:,.2f}'.format(float(v)) if v else '0.00'"/>
                
                <div class="page" style="font-family: 'Arial', 'Helvetica', sans-serif; font-size: 13px; line-height: 1.4; color: #000; background-color: #ffffff; margin: 0; padding: 0; height: 100%; display: flex; flex-direction: column;">
                    
                    <!-- Custom Header -->
                    <div style="background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%); padding: 20px 30px; border-bottom: 3px solid #800020; flex-shrink: 0;">
                        <table style="width: 100%; border-collapse: collapse;">
                            <tr>
                                <td style="width: 25%; vertical-align: middle;">
                                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="OSUS Properties" style="max-width: 160px; height: auto;"/>
                                </td>
                                <td style="width: 75%; vertical-align: top; text-align: right;">
                                    <div style="color: #333; font-size: 11px; line-height: 1.5;">
                                        <div style="font-weight: bold; font-size: 13px; margin-bottom: 3px;" t-field="o.company_id.name"/>
                                        <div t-if="o.company_id.street" t-field="o.company_id.street"/>
                                        <div>
                                            <span t-if="o.company_id.city" t-field="o.company_id.city"/>
                                            <span t-if="o.company_id.state_id">, <span t-field="o.company_id.state_id.name"/></span>
                                        </div>
                                        <div t-if="o.company_id.country_id" t-field="o.company_id.country_id.name"/>
                                        <div t-if="o.company_id.vat" style="font-weight: bold; margin-top: 2px;">
                                            VAT: <span t-field="o.company_id.vat"/>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Main Content Area -->
                    <div style="flex: 1; padding: 15px 30px; overflow: hidden;">
                        
                        <!-- Vendor Details Card - Compact -->
                        <div style="margin-bottom: 12px;">
                            <div style="background-color: #f8f9fa; border: 2px solid #800020; border-radius: 5px; padding: 12px;">
                                <table style="width: 100%; border-collapse: collapse;">
                                    <tr>
                                        <td style="width: 15%; vertical-align: top; text-align: center;">
                                            <!-- QR Code Section -->
                                            <t t-if="o.qr_in_report and o.qr_image">
                                                <img class="border border-dark rounded" t-att-src="image_data_uri(o.qr_image)" style="width: 90px; height: 90px;"/>
                                                <div style="font-size: 8px; color: #800020; margin-top: 3px; font-weight: bold;">
                                                    Scan to view<br/>or pay
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <div style="width: 90px; height: 90px; border: 2px solid #800020; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa; flex-direction: column; margin: 0 auto;">
                                                    <span style="color: #800020; font-weight: bold; font-size: 12px;">INVOICE</span>
                                                </div>
                                            </t>
                                        </td>
                                        <td style="width: 85%; vertical-align: top; padding-left: 15px;">
                                            <div style="color: #800020; font-weight: bold; font-size: 13px; margin-bottom: 5px; text-decoration: underline;">VENDOR DETAILS</div>
                                            <div style="color: #000; font-size: 12px; line-height: 1.4;">
                                                <span style="font-weight: bold;"><span t-field="o.partner_id.name"/></span> | 
                                                <span t-field="o.partner_id.street"/><t t-if="o.partner_id.street2">, <span t-field="o.partner_id.street2"/></t> | 
                                                <span t-field="o.partner_id.city"/><t t-if="o.partner_id.zip">, <span t-field="o.partner_id.zip"/></t> | 
                                                <span t-field="o.partner_id.country_id.name"/> | 
                                                <strong>VAT: <span t-field="o.partner_id.vat"/></strong>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Invoice Header - Compact -->
                        <div style="text-align: center; margin: 10px 0;">
                            <h2 style="color: #800020; font-size: 20px; font-weight: bold; margin: 0; letter-spacing: 0.5px;">
                                TAX INVOICE <span t-field="o.name" style="color: #800020;"/>
                            </h2>
                        </div>

                        <!-- Dates - Compact -->
                        <table style="width: 100%; margin-bottom: 12px; font-size: 11px; border-collapse: collapse;">
                            <tr>
                                <td style="width: 33%; text-align: left; padding: 3px 0;">
                                    <strong style="color: #000000;">Invoice Date:</strong> 
                                    <span style="color: #000;" t-out="format_uk_date(o.invoice_date) if o.invoice_date else ''"/>
                                </td>
                                <td style="width: 34%; text-align: center; padding: 3px 0;">
                                    <strong style="color: #000000;">Due Date:</strong> 
                                    <span style="color: #000;" t-out="format_uk_date(o.invoice_date_due or o.date) if (o.invoice_date_due or o.date) else ''"/>
                                </td>
                                <td style="width: 33%; text-align: right; padding: 3px 0;">
                                    <strong style="color: #000000;">Booking Date:</strong> 
                                    <span style="color: #000;" t-out="format_uk_date(o.booking_date) if o.booking_date else ''"/>
                                </td>
                            </tr>
                        </table>

                        <!-- Line Items Table -->
                        <table style="border: 2px solid #800020; border-collapse: collapse; margin-bottom: 12px; width: 100%; font-size: 10px;">
                            <thead>
                                <tr style="background-color: #800020; color: white;">
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: left;">BUYER</th>
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: left;">PROJECT</th>
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: left;">UNIT</th>
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: center;">RATE</th>
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: right;">UNIT PRICE</th>
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: center;">VAT</th>
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: right;">VAT AMOUNT</th>
                                    <th style="color: white; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; font-weight: bold; text-align: right;">AMOUNT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="background-color: white;">
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px;"></td>
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px;"></td>
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px;"></td>
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; text-align: center;">
                                        <t t-if="o.invoice_line_ids and o.invoice_line_ids[0].quantity">
                                            <span t-esc="format_number(o.invoice_line_ids[0].quantity * 100)"/>%
                                        </t>
                                        <t t-else="">7.00%</t>
                                    </td>
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; text-align: right;">
                                        <span t-esc="format_number(o.sale_value) if o.sale_value else '2,206,785.68'"/> AED
                                    </td>
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; text-align: center;">5%</td>
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; text-align: right;">
                                        <span t-esc="format_number(o.amount_tax)"/> AED
                                    </td>
                                    <td style="color: #000; padding: 8px 6px; border: 1px solid #800020; font-size: 10px; text-align: right; font-weight: bold;">
                                        <span t-esc="format_number(o.amount_total)"/> AED
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Totals Box - Right Aligned -->
                        <div style="margin-bottom: 12px; display: flex; justify-content: flex-end;">
                            <table style="border-collapse: collapse; font-size: 11px; min-width: 380px;">
                                <tr style="background-color: #800020; color: white;">
                                    <td style="border: 1px solid #800020; padding: 8px 12px; font-weight: bold; color: white;">UNTAXED AMOUNT</td>
                                    <td style="border: 1px solid #800020; padding: 8px 12px; text-align: right; font-weight: bold; color: white; white-space: nowrap;">
                                        <span t-esc="format_number(o.amount_untaxed)"/> AED
                                    </td>
                                </tr>
                                <tr style="background-color: #000000; color: white;">
                                    <td style="border: 1px solid #000000; padding: 8px 12px; font-weight: bold; color: white;">VAT (5%)</td>
                                    <td style="border: 1px solid #000000; padding: 8px 12px; text-align: right; font-weight: bold; color: white; white-space: nowrap;">
                                        <span t-esc="format_number(o.amount_tax)"/> AED
                                    </td>
                                </tr>
                                <tr style="background-color: #800020; color: white;">
                                    <td style="border: 1px solid #800020; padding: 8px 12px; font-weight: bold; color: white;">TOTAL DUE AMOUNT</td>
                                    <td style="border: 1px solid #800020; padding: 8px 12px; text-align: right; font-weight: bold; color: white; white-space: nowrap;">
                                        <span t-esc="format_number(o.amount_total)"/> AED
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Amount in Words -->
                        <div style="color: #000; font-size: 11px; margin-bottom: 12px;">
                            <strong style="color: #800020;">Amount in Words (Total):</strong>
                            <span t-field="o.amount_total_words" style="font-style: italic; color: #000;"/>
                        </div>

                        <!-- Payment Instructions -->
                        <div style="margin-top: 20px; margin-bottom: 15px;">
                            <div style="color: #800020; font-size: 14px; font-weight: bold; margin-bottom: 8px;">Payment Instructions</div>
                            <p style="color: #000; font-size: 12px; margin-bottom: 8px; margin-top: 0;">Please pay to this Account Details in Cheque or Bank Transfer</p>
                            <table style="width: 100%; border-collapse: collapse; border: 2px solid #800020; font-size: 11px;">
                                <tr style="background-color: #ffffff;">
                                    <td style="width: 18%; color: #000; font-weight: bold; padding: 10px 12px; border: 1px solid #800020;">Bank Name</td>
                                    <td style="width: 32%; color: #000; padding: 10px 12px; border: 1px solid #800020;">ABU DHABI COMMERCIAL BANK (ADCB)</td>
                                    <td style="width: 18%; color: #000; font-weight: bold; padding: 10px 12px; border: 1px solid #800020;">Account No.</td>
                                    <td style="width: 32%; color: #000; padding: 10px 12px; border: 1px solid #800020;">14041417820001 - AED</td>
                                </tr>
                                <tr style="background-color: #ffffff;">
                                    <td style="color: #000; font-weight: bold; padding: 10px 12px; border: 1px solid #800020;">Account Name</td>
                                    <td style="color: #000; padding: 10px 12px; border: 1px solid #800020;">OSUS REAL ESTATE BROKERAGE LLC</td>
                                    <td style="color: #000; font-weight: bold; padding: 10px 12px; border: 1px solid #800020;">Branch</td>
                                    <td style="color: #000; padding: 10px 12px; border: 1px solid #800020;">Business Bay</td>
                                </tr>
                                <tr style="background-color: #ffffff;">
                                    <td style="color: #000; font-weight: bold; padding: 10px 12px; border: 1px solid #800020;">IBAN</td>
                                    <td colspan="3" style="color: #000; padding: 10px 12px; border: 1px solid #800020;">AE350030014041417820001</td>
                                </tr>
                            </table>
                            <p style="color: #000; margin-top: 8px; margin-bottom: 0; font-size: 11px; font-style: italic;">Please include your reference number when making the payment</p>
                        </div>
                    </div>

                    <!-- Custom Footer -->
                    <div style="background-color: #f5f5f5; border-top: 3px solid #800020; padding: 18px 30px; flex-shrink: 0;">
                        <table style="width: 100%; border-collapse: collapse; font-size: 12px; color: #333;">
                            <tr>
                                <td style="width: 33%; vertical-align: middle;">
                                    <div style="margin-bottom: 4px;" t-if="o.company_id.phone">
                                        <strong style="color: #800020;">ðŸ“ž</strong> <span style="color: #000;" t-field="o.company_id.phone"/>
                                    </div>
                                    <div t-if="o.company_id.email">
                                        <strong style="color: #800020;">âœ‰</strong> <span style="color: #000;" t-field="o.company_id.email"/>
                                    </div>
                                </td>
                                <td style="width: 34%; text-align: center; vertical-align: middle;">
                                    <div style="color: #000;" t-if="o.company_id.website">
                                        <a t-att-href="o.company_id.website" style="color: #800020; text-decoration: none; font-weight: bold;" t-field="o.company_id.website"/>
                                    </div>
                                </td>
                                <td style="width: 33%; text-align: right; vertical-align: middle;">
                                    <div style="color: #000; font-weight: bold; font-size: 10px; font-style: italic;">
                                        This is a computer generated document.<br/>No signature or stamp required.
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
