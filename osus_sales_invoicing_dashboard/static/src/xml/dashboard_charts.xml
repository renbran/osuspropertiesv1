<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="osus_sales_invoicing_dashboard.DashboardChart" owl="1">
        <div class="o_osus_dashboard_chart" style="position: relative; width: 100%; height: 300px;">
            <!-- Loading State -->
            <div t-if="state.loading" class="o_chart_loading" style="display: flex; align-items: center; justify-content: center; height: 100%; color: #666;">
                <i class="fa fa-spinner fa-spin fa-2x"/>
                <span class="ml-2">Loading chart...</span>
            </div>

            <!-- Error State -->
            <div t-if="state.error" class="o_chart_error alert alert-warning" style="margin: 20px; text-align: center;">
                <i class="fa fa-exclamation-triangle"/>
                <span class="ml-2" t-esc="state.error"/>
            </div>

            <!-- No Data State -->
            <div t-if="!state.loading and !state.hasData and !state.error" class="o_chart_no_data" style="display: flex; align-items: center; justify-content: center; height: 100%; color: #999; font-style: italic; flex-direction: column;">
                <i class="fa fa-chart-bar fa-3x mb-3" style="opacity: 0.3;"/>
                <span>No data available for selected filters</span>
            </div>

            <!-- Chart Canvas -->
            <canvas t-ref="canvas" t-if="!state.loading and state.hasData" style="max-height: 300px;"/>
        </div>
    </t>
    
</templates>
