<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 
            Deal Stage Configuration Data
            =============================
            
            This file provides sample UTM sources and campaigns that work well with
            the deal tracking system. You can create more through the UI.
            
            Note: noupdate="1" means these records will only be created if they don't exist.
            This prevents duplicate key errors on module update.
            
            Navigate to: Sales > Configuration > Marketing > Sources/Campaigns
        -->

        <!-- Sample UTM Sources (if not already present) -->
        <record id="utm_source_direct_sales" model="utm.source" forcecreate="False">
            <field name="name">Direct Sales</field>
        </record>

        <record id="utm_source_referral" model="utm.source" forcecreate="False">
            <field name="name">Referral</field>
        </record>

        <record id="utm_source_website" model="utm.source" forcecreate="False">
            <field name="name">Website</field>
        </record>

        <record id="utm_source_cold_call" model="utm.source" forcecreate="False">
            <field name="name">Cold Call</field>
        </record>

        <!-- Sample UTM Campaigns -->
        <record id="utm_campaign_q4_2025" model="utm.campaign" forcecreate="False">
            <field name="name">Q4 2025 Campaign</field>
        </record>

        <record id="utm_campaign_product_launch" model="utm.campaign" forcecreate="False">
            <field name="name">New Product Launch</field>
        </record>

        <!-- Sample UTM Medium -->
        <record id="utm_medium_email" model="utm.medium" forcecreate="False">
            <field name="name">Email</field>
        </record>

        <record id="utm_medium_phone" model="utm.medium" forcecreate="False">
            <field name="name">Phone</field>
        </record>

    </data>
</odoo>
