<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job: Daily Ranking Update -->
        <record id="ir_cron_update_rankings" model="ir.cron">
            <field name="name">Assessment: Update Rankings Daily</field>
            <field name="model_id" ref="model_assessment_ranking"/>
            <field name="state">code</field>
            <field name="code">model.regenerate_all_rankings()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job: Cleanup Old Drafts -->
        <record id="ir_cron_cleanup_drafts" model="ir.cron">
            <field name="name">Assessment: Cleanup Old Drafts</field>
            <field name="model_id" ref="model_assessment_candidate"/>
            <field name="state">code</field>
            <field name="code">
# Delete draft candidates older than 30 days (uses fields module already available)
cutoff_date = fields.Datetime.now() - datetime.timedelta(days=30)
old_drafts = model.search([('status', '=', 'draft'), ('create_date', '&lt;', cutoff_date)])
old_drafts.unlink()
            </field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
