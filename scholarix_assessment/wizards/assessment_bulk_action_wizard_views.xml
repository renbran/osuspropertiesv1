<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_assessment_bulk_action_wizard" model="ir.ui.view">
            <field name="name">assessment.bulk.action.wizard.form</field>
            <field name="model">assessment.bulk.action.wizard</field>
            <field name="arch" type="xml">
                <form string="Bulk Action">
                    <group>
                        <field name="action_type"/>
                        <field name="new_status" invisible="action_type != 'status'" required="action_type == 'status'"/>
                    </group>
                    <footer>
                        <button name="action_apply" string="Apply" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
